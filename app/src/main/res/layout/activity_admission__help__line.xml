<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="helloworld.aid.com.phonebookdesign.Admission_Help_Line">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#37bce9">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="181dp"
           android:src="@drawable/diu"
            android:layout_x="0dp"
            android:layout_y="46dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_x="1dp"
            android:layout_y="375dp"
            android:id="@+id/call_admission"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call for extra information:"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="#ffffff"

            android:layout_x="25dp"
            android:layout_y="329dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact- info@daffodilvarsity.edu.bd"
            android:textSize="25sp"
            android:textColor="#f9f9f9"
            android:layout_marginBottom="137dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="-11dp"
            android:layout_y="253dp"
            android:textStyle="italic"/>

    </AbsoluteLayout>


</RelativeLayout>
